{
  "name": "translatar-extension",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite build --watch",
    "build": "npm run typecheck && vite build && cp manifest.json dist/manifest.json",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.ts\"",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.0.2",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2",
    "vite": "^6.2.1"
  }
}
