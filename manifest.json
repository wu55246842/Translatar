{
  "manifest_version": 3,
  "name": "Translatar",
  "description": "Correct English, translate, and rewrite selected text using your configured API.",
  "version": "1.0.0",
  "permissions": ["activeTab", "contextMenus", "storage", "scripting", "clipboardWrite"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "background": {
    "service_worker": "assets/background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Translatar",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "commands": {
    "correct-english": {
      "suggested_key": {
        "default": "Alt+E"
      },
      "description": "Correct English"
    },
    "translate": {
      "suggested_key": {
        "default": "Alt+T"
      },
      "description": "Translate"
    },
    "rewrite": {
      "suggested_key": {
        "default": "Alt+R"
      },
      "description": "Rewrite"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["assets/content.js"],
      "run_at": "document_idle"
    }
  ]
}
